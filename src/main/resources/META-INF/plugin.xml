<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.hamatthias.sunset</id>
    <name>Theme Changing Strategies</name>
    <vendor>hamatthias</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.notifications</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable
                parentId="tools"
                instance="com.github.hamatthias.sunset.settings.SunsetSettingsConfigurable"
                id="com.github.hamatthias.sunset.settings.SunsetSettingsConfigurable"
                bundle="messages.settings"
                key="displayName"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.hamatthias.sunset.settings.SunsetSettings"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="com.github.hamatthias.sunset.services.startup.SunsetStartupActivity"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="Theme change"
                           displayType="BALLOON"
                           key="notification.title.themeChange"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <iconMapper mappingFile="SunsetIconMappings.json"/>
    </extensions>

    <actions resource-bundle="messages.actions">
        <action
                id="com.github.hamatthias.sunset.actions.SwapTheme"
                class="com.github.hamatthias.sunset.actions.SwapTheme"
                icon="/icons/swapActionDefault.svg">
            <override-text place="MainToolbar"/>
            <override-text place="MainMenu"/>
            <add-to-group group-id="MainToolbarRight" anchor="last"/>
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
